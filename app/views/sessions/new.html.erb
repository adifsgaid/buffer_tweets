<h1>Sign in</h1>

<%= form_with url: sign_in_path do |form| %>
    
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "davi@gmail.com", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "password", class:"form-control"%>
    </div>
     
     <div class="mb-3">
        <%= form.submit "Sign in", class:"btn btn-primary"%>
    </div>
<% end %>