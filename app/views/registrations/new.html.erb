<h1>Sign up</h1>

<%= form_with model: @user, url: sign_up_path do |form|  %>
  
     <%= render "shared/errors_form", form: form %>
     
    <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "David", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "davi@gmail.com", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "password", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation,  placeholder: "confirmation password", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.submit "Get Started", class:"btn btn-primary"%>
    </div>
<% end %>