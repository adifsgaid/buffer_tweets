<h1>Reset new Password </h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form|  %>
    
    <% if form.object.errors.any? && @user != nil  %>
          <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
               <div>  <%= message %> </div>
            <% end %>
          </div>
     <% end  %>
    
     <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "password", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation,  placeholder: "confirmation password", class:"form-control"%>
    </div>
    
    <div class="mb-3">
        <%= form.submit "Reset Password", class:"btn btn-primary" %>
    </div>

<% end %>