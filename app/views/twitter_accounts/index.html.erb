<div class='d-flex align-items-center justify-content-between'>
    <h1>Twitter Accounts</h1>
    <% if Current.user.twitter_accounts.none? %>
        <%= link_to "Connect to your account", '/auth/twitter', method: :post, class:'btn btn-primary' %>
    <% end %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
<div class="d-flex align-items-center mb-4" >
    <div class="me-4">
        <%= image_tag twitter_account.image , class: "rounded-circle" %>
    </div>
    <div class=" d-flex">
        <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}"%>
        <%= button_to "Disconect", twitter_account, method: :delete, style:" margin-left: 40px;", data: {confirm: "Are you sure ? "}%>
    </div>
</div>

<% end %> 